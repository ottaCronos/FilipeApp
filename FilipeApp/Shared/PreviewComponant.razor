@code {

    bool IsLoaded { get; set; }
    
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender) {
            IsLoaded = true;
            Reload();
        }
    }

    public void Reload() {
        Js.InvokeVoidAsync("init");
    }
    
}